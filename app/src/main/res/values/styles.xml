<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="NoteDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="NoteEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DetailTheme" parent="AppTheme" />

    <style name="SetUpTheme" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AmmoniaTextTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/green_300</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/green_100</item>
    </style>

    <style name="NitriteTextTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/blue_300</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/blue_100</item>
    </style>

    <style name="NitrateTextTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/red_300</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/red_100</item>
    </style>

</resources>
