<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/wusa_parent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/wusa_image"
        android:layout_width="@dimen/wus_image_dimen"
        android:layout_height="@dimen/wus_image_dimen"
        android:layout_marginLeft="@dimen/horizontal_margin_default"
        android:layout_marginRight="@dimen/horizontal_margin_default"
        android:layout_marginTop="@dimen/vertical_margin_default"
        android:layout_marginBottom="@dimen/vertical_margin_default"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:ignore="contentDescription"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/wusa_pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
       android:layout_above="@+id/wusa_indicator" />

    <com.github.ppartisan.fishlesscycle.setup.view.DotIndicatorView
        android:id="@+id/wusa_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/line_margin_top_small"
        android:layout_above="@+id/wusa_ad_view"
        android:layout_centerHorizontal="true"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/wusa_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/test_banner_ad_unit_id"/>

</RelativeLayout>