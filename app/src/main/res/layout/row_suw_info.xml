<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/iwus_row_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="Aquarium Tank"/>

    <ImageButton
        android:id="@+id/iwus_row_expand"
        android:layout_width="@dimen/image_button_small"
        android:layout_height="@dimen/image_button_small"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_unfold_more_white_24dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

</LinearLayout>