<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowCount="9"
        app:columnCount="6"
        app:alignmentMode="alignBounds">

        <ImageView
            android:id="@+id/tcv_image"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_rowSpan="8"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tcv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            app:layout_columnSpan="5"
            app:layout_columnWeight="3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="My First Tank!"/>

        <TextView
            android:id="@+id/tcv_last_updated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            app:layout_columnSpan="5"
            app:layout_columnWeight="3"
            tools:text="Last Updated 18th October at 3:14pm"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_columnSpan="5"
            app:layout_columnWeight="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/ammonia"
            app:layout_columnWeight="0"
            tools:text="Ammonia"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/fm_colon"
            app:layout_columnWeight="0"
            tools:text=":"/>

        <TextView
            android:id="@+id/tcv_ammonia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_columnSpan="3"
            tools:text="2 mg/L"
            android:gravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/nitrite"
            app:layout_columnWeight="0"
            tools:text="Nitrite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/fm_colon"
            app:layout_columnWeight="0"
            tools:text=":"/>

        <TextView
            android:id="@+id/tcv_nitrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_columnSpan="3"
            tools:text="0 mg/L" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/nitrate"
            app:layout_columnWeight="0"
            tools:text="Nitrate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/fm_colon"
            app:layout_columnWeight="0"
            tools:text=":"/>

        <TextView
            android:id="@+id/tcv_nitrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_columnSpan="3"
            tools:text="16 mg/L" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_columnSpan="5"
            app:layout_columnWeight="3" />

        <TextView
            android:id="@+id/tcv_next_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnSpan="5"
            app:layout_columnWeight="3"
            android:gravity="end|center_vertical"
            tools:text="Next Update Scheduled For 19th October"/>

