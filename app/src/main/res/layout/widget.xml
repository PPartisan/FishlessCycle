<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/w_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/w_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@android:color/black"
        android:shadowRadius="8"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/horizontal_margin_default"
        android:paddingRight="@dimen/horizontal_margin_default"
        android:paddingTop="@dimen/vertical_margin_default"
        android:paddingBottom="@dimen/vertical_margin_default"
        android:background="@drawable/widget_title_scrim"
        android:text="@string/app_name"/>
    
    <TextView
        android:id="@+id/w_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@android:color/black"
        android:shadowRadius="4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:background="@drawable/widget_scrim"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/horizontal_margin_default"
        android:paddingRight="@dimen/horizontal_margin_default"
        android:paddingTop="@dimen/horizontal_margin_default"
        android:paddingBottom="@dimen/horizontal_margin_default"
        android:gravity="start|center_vertical"
        tools:text="Next Update on 15 Nov"/>

</RelativeLayout>