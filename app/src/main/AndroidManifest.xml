<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ppartisan.fishlesscycle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DetailActivity"
            android:theme="@style/DetailTheme"/>

        <activity
            android:name=".setup.SetUpWizardActivity"
            android:theme="@style/SetUpTheme" />

        <activity
            android:name=".SettingsActivity"
            android:theme="@style/SettingsTheme"
            android:label="@string/as_label"/>

        <activity android:name=".EditTankActivity" />

        <provider
            android:authorities="com.github.ppartisan.fishlesscycle"
            android:name=".data.FishlessCycleProvider"
            android:exported="false" />

    </application>

</manifest>